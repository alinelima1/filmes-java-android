<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aula.filmes.View.DetalhesFilmeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloDetalhes"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:text="Título:"/>
        <TextView
            android:id="@+id/tvAnoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Ano:"/>
        <TextView
            android:id="@+id/tvDuracaoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Duração:"/>
        <TextView
            android:id="@+id/tvGeneroDetalhes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Gênero:"/>
        <TextView
            android:id="@+id/tvDiretorDetalhes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Diretor:"/>
        <ImageView
            android:id="@+id/IvPoster"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/BtnAssitir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Assitir"/>
        <Button
            android:id="@+id/BtnAssistido"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Assistido"/>
    </LinearLayout>


</ScrollView>